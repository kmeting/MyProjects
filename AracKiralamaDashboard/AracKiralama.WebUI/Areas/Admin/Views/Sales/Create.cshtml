@model AracKiralama.Entities.Satis

@{
    ViewData["Title"] = "Kirlama Ekle";
}

<h1>Kirlama Ekle</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AracId" class="control-label"></label>
                <select asp-for="AracId" class ="form-select" asp-items="ViewBag.AracId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MusteriId" class="control-label"></label>
                <select asp-for="MusteriId" class ="form-control" asp-items="ViewBag.MusteriId"></select>
            </div>
            <div class="form-group">
                <label asp-for="KiralamaFiyati" class="control-label"></label>
                <input asp-for="KiralamaFiyati" class="form-control" />
                <span asp-validation-for="KiralamaFiyati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KiralamaTarihi" class="control-label"></label>
                <input asp-for="KiralamaTarihi" class="form-control" />
                <span asp-validation-for="KiralamaTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


