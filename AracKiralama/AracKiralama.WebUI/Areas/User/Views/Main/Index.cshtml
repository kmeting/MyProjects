@model List<Arac>


@{
    ViewData["Title"] = "Kullanıcı Ana Ekran";
}


<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            
            @foreach (var arac in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="~/Img/Cars/@arac.Resim1" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@arac.Marka - @arac.Modeli</h5>
                                <!-- Product price-->
                                @arac.Fiyati ₺
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Detay Görüntüle</a></div>
                        </div>
                    </div>
                </div>
            }

            

        </div>
    </div>
</section>