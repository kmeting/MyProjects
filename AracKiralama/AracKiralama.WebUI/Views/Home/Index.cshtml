@model Slider
@{
    ViewData["Title"] = "Anasayfa";
    //var Id = Model.Sliders.First().Id;

}
<div id="carouselExampleIndicators" class="carousel slide" data-bs-interval="0" data-bs-wrap="true">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Araclar?.Count; i++)
        {
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@((i == 0) ? "active" : "")"></li>
        }
    </ol>
    <div class="carousel-inner">
        <div id="carouselExample" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Araclar?.Count; i++)
                {
                    <div class="carousel-item @((i == 0) ? "active" : "")">
                        <!-- Slayt içeriğini buraya ekleyin -->
                        <img style="width:1200px; height:500px;" src="~/Img/Cars/@Model.Araclar[i].Resim1" alt="Slide @i">
                        <div class="carousel-caption">
                            <h3>@Model.Araclar[i].Notlar</h3>
                            <p></p>
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Önceki</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Sonraki</span>
            </button>
        </div>
    </div>
</div>


<div class="container px-4 px-lg-5 mt-5" ">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
@foreach (var item in Model.Araclar)
{
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Sale badge-->
                    <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Kiralık</div>
                    <!-- Product image-->
                    <img class="card-img-top" src="/Img/Cars/@item.Resim1" alt="...">
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">@item.Modeli @item.KasaTipi</h5>
                            <!-- Product reviews-->
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                            </div>
                            <!-- Product price-->
                        @item.Fiyati ₺
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/Arac/Index/@item.Id">İncele</a></div>
                    </div>
                </div>
            </div>
}

    </div>
</div>

